<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/widget_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#d0404040"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:baselineAligned="false">
            <TextView
                android:id="@+id/widget_forecast_time1"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lightTextColor"
                android:textAllCaps="true"
                android:gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/widget_forecast_middle1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/widget_forecast_image1"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="-"/>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/widget_forecast_image1">

                    <TextView
                        android:id="@+id/widget_forecast_loworhightemp1"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="@color/lightTextColor"
                        android:gravity="center"/>


                    <TextView
                        android:id="@+id/widget_forecast_loworhigh1"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@id/widget_forecast_loworhightemp1"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/lightTextColor"
                        android:gravity="center"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/widget_forecast_condition1"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lightTextColor"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/dividerColor"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/widget_forecast_time2"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lightTextColor"
                android:textAllCaps="true"
                android:gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/widget_forecast_middle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/widget_forecast_image2"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="-"/>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/widget_forecast_image2">
                    <TextView
                        android:id="@+id/widget_forecast_loworhightemp2"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="@color/lightTextColor"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/widget_forecast_loworhigh2"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@id/widget_forecast_loworhightemp2"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/lightTextColor"
                        android:gravity="center"/>
                    <!--<TextView-->
                        <!--android:id="@+id/widget_forecast_loworhightemp2"-->
                        <!--android:lines="1"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="-2dp"-->
                        <!--android:maxLines="1"-->
                        <!--android:breakStrategy="simple"-->
                        <!--android:layout_below="@id/widget_forecast_loworhigh2"-->
                        <!--android:text="-"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textColor="@color/lightTextColor"-->
                        <!--android:gravity="center" />-->

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/widget_forecast_condition2"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lightTextColor"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout> 