<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="uiController"
            type="org.mesonet.app.mesonetdata.MesonetUIController"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:weightSum="2"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:background="@color/mesoBackground"
        tools:context=".mesonetdata.MesonetFragment">

        <org.mesonet.app.customviews.ScalableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            base_width="3.6"
            base_height="5.85"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:baselineAligned="false">

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_time"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginStart="36dp"
                android:textColor="@color/blueTextColor"
                android:textSize="40dp"
                android:text="@{uiController.GetTimeString()}"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_tair"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:layout_marginStart="36dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="148dp"
                android:text="@{uiController.GetAirTempString()}"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="-8dp"
                android:text="@string/current_feelsLike"
                android:textSize="37.5dp"
                android:textColor="@color/blueTextColor"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_feelsLike"
                android:layout_width="match_parent"
                android:layout_height="74.5dp"
                android:layout_marginStart="36dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="56dp"
                android:text="@{uiController.GetApparentTempString()}"/>

        </org.mesonet.app.customviews.ScalableLayout>

        <org.mesonet.app.customviews.ScalableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            base_width="3.6"
            base_height="5.85"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:baselineAligned="false">

            <!--<ImageButton-->
                <!--android:id="@+id/meteogram_btn"-->
                <!--android:layout_width="224dp"-->
                <!--android:layout_height="56dp"-->
                <!--android:layout_marginStart="36dp"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:scaleType="fitStart"-->
                <!--android:src="@drawable/meteogram_image"-->
                <!--android:background="@null"/>-->

            <org.mesonet.app.customviews.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="@string/current_dewpoint"
                android:textColor="@color/blueTextColor"
                android:textSize="32dp"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_dewpoint"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="36dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="32dp"
                android:text="@{uiController.GetDewPointString()}"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="@string/current_wind"
                android:textColor="@color/blueTextColor"
                android:textSize="32dp"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_wind"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:textColor="@color/whiteTextColor"
                android:textSize="32dp"
                android:text="@{uiController.GetWindString()}"/>

            <org.mesonet.app.customviews.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="-2dp"
                android:text="@string/current_24hrRain"
                android:textSize="32dp"
                android:textColor="@color/blueTextColor" />

            <org.mesonet.app.customviews.AutoResizeTextView
                android:id="@+id/current_24hrRain"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="36dp"
                android:textSize="32dp"
                android:textColor="@color/whiteTextColor"
                android:text="@{uiController.Get24HrRainfallString()}"/>

        </org.mesonet.app.customviews.ScalableLayout>

    </LinearLayout>
</layout>