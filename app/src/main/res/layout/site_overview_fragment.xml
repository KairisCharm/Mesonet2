<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="uiController"
            type="org.mesonet.app.mesonetdata.MesonetUIController"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/containerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<Toolbar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:color/black"/>-->

            <!--<Toolbar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#153679"/>-->

            <FrameLayout
                android:id="@+id/mesonetDetailContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/mesoLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        android:text="Friday Night"
                        android:textColor="@color/blueTextColor"
                        android:textAllCaps="true"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/nfg"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="true"
                        android:gravity="top">

                        <TextView
                            android:layout_width="44dp"
                            android:layout_marginTop="4dp"
                            android:layout_height="28dp"
                            android:textColor="@color/blueTextColor"
                            android:autoSizeTextType="uniform"
                            app:autoSizeTextType="uniform"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="top"
                            android:text="Low"/>

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="6dp"
                            android:textColor="@color/whiteTextColor"
                            android:autoSizeTextType="uniform"
                            app:autoSizeTextType="uniform"
                            android:text="47°F"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        android:textColor="@color/blueTextColor"
                        android:text="Dense Fog\n"
                        android:minLines="2"
                        android:maxLines="2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        android:text="Saturday"
                        android:textColor="@color/blueTextColor"
                        android:textAllCaps="true"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bkn"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_marginTop="4dp"
                            android:layout_height="28dp"
                            android:textColor="#ffb7a1"
                            android:autoSizeTextType="uniform"
                            app:autoSizeTextType="uniform"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="top"
                            android:text="High"/>

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="6dp"
                            android:textColor="@color/whiteTextColor"
                            android:autoSizeTextType="uniform"
                            app:autoSizeTextType="uniform"
                            android:text="79°F"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        android:textColor="@color/blueTextColor"
                        android:text="Mostly Cloudy\n"
                        android:minLines="2"
                        android:maxLines="2"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/siteListFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:layout_anchor="@id/mesoLayout"
            app:layout_anchorGravity="center_horizontal"
            android:src="@drawable/ic_view_list_white_36dp"
            app:backgroundTint="@color/navBackground"/>

        <FrameLayout
            android:id="@+id/siteSelection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteTextColor" />

    </android.support.design.widget.CoordinatorLayout>
</layout>