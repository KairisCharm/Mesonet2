<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mesonetSiteDataController"
            type="org.mesonet.app.site.mesonetdata.MesonetSiteDataController"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/containerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/siteBackground"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="0dp"
                android:layout_weight="7">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="@color/mesoBackground"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/mesoBackground"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.Toolbar
                            android:id="@+id/siteToolbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/mesoBackground"
                            android:elevation="2dp"
                            android:layout_alignParentTop="true"
                            app:title="@{mesonetSiteDataController.CurrentStationName()}"/>

                        <!--<Toolbar-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="@android:color/black"/>-->

                        <!--<Toolbar-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="#153679"/>-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/siteToolbar">
                            <FrameLayout
                                android:id="@+id/mesonetDetailContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
            <View
                android:id="@+id/fabAnchor"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/forecastViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/previousFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/ic_navigate_before_white_24dp"
                    android:elevation="6dp"
                    android:visibility="gone"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/nextFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="75dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_navigate_next_white_24dp"
                    android:elevation="6dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/childFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteTextColor"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:layout_anchorGravity="top"
            app:layout_anchor="@id/containerFragment"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>