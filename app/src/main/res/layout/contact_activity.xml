<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/listBackgroundColor"
            android:titleTextColor="@color/lightTextColor"
            app:titleTextColor="@color/lightTextColor"
            android:title="Contact"
            app:title="Contact"/>

        <RelativeLayout
            android:id="@+id/webButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.mesonet.org"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/emailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="operator@mesonet.org"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/twitterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@okmesonet"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oklahoma Mesonet"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/phoneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(405) 325-2541"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:id="@+id/addressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 David L. Boren Blvd.\n
	Suite 2900\n
	Norman, OK 73071"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

    </LinearLayout>
</layout>