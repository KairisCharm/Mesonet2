<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="forecastData"
            type="org.mesonet.app.forecast.ForecastData"/>
        <variable
            name="forecastLayout"
            type="org.mesonet.app.forecast.ForecastLayout"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_weight="1"
        tools:background="@color/forecastDayBackground">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@{forecastLayout.GetBackgroundColor()}"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            app:cardBackgroundColor="@{forecastLayout.GetBackgroundColor()}"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="top|center_horizontal"
                    android:autoSizeTextType="uniform"
                    app:autoSizeTextType="uniform"
                    android:text="@{forecastData.GetTime()}"
                    android:textColor="@color/lightTextColor"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:textSize="18sp"
                        android:textColor="@color/lightTextColor"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="@{forecastData.GetHighOrLow()}"
                        tools:text="HIGH"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/whiteTextColor"
                        app:autoSizeTextType="uniform"
                        android:text="@{forecastData.GetTemp()}"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autoSizeTextType="uniform"
                    app:autoSizeTextType="uniform"
                    android:textColor="@color/lightTextColor"
                    android:text="@{forecastData.GetStatus()}"
                    android:minLines="2"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/windTextView"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autoSizeTextType="uniform"
                    app:autoSizeTextType="uniform"
                    android:textColor="@color/whiteTextColor"
                    android:text="@{forecastData.GetWindDescription()}"
                    android:textSize="16sp"
                    android:minLines="2"
                    android:maxLines="2"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>